{
  "name": "atomify-chatgpt-api",
  "version": "0.0.1",
  "description": "This project serves as a study tool for developers looking to implement the best methods using NestJS, DDD and Hexagonal.",
  "author": "Noah Wang Teng",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "NODE_ENV=development nodemon",
    "prod": "NODE_ENV=production nest build ",
    "api:rest:run": "node dist/apps/api-rest/src/main.js",
    "api:rest:dev": "npm run dev api-rest",
    "api:rest:prod": "npm run prod api-rest",
    "debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@nestjs/cli": "9.2.0",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.3.8",
    "@types/express": "4.17.17",
    "@types/jest": "29.4.0",
    "@types/node": "18.13.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "jest": "29.4.2",
    "lint-staged": "^13.1.1",
    "nestjs-pino": "3.1.2",
    "nodemon": "2.0.20",
    "pino-pretty": "9.2.0",
    "prettier": "2.8.4",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@nestjs/common": "9.3.8",
    "@nestjs/config": "2.3.1",
    "@nestjs/core": "9.3.8",
    "@nestjs/cqrs": "9.0.3",
    "@nestjs/mongoose": "^9.2.1",
    "@nestjs/platform-express": "9.3.8",
    "@nestjs/swagger": "6.2.1",
    "@nestjs/typeorm": "9.0.1",
    "cache-manager": "5.1.6",
    "cache-manager-redis-store": "3.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
